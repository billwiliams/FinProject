<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/me_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffffff"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     <RelativeLayout

         android:layout_width="match_parent"
         android:layout_height="match_parent">


    <TextView
android:id="@+id/me_about"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"

        android:textStyle="bold|italic"
        android:textSize="20.0sp"
        android:text="@string/me_about"/>
    <ImageView
        android:id="@+id/me_pic"
android:layout_below="@+id/me_about"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:gravity="center_horizontal"
        />
    <TextView
        android:textStyle="bold|italic"
        android:textSize="15.0sp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/me_pic"
        android:layout_marginLeft="2mm"
        android:text="Shoppers"
        android:layout_below="@+id/me_about"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textSize="15.0sp"

        android:text="Information"
        android:layout_alignRight="@+id/me_pic"
        android:layout_below="@+id/me_about"
         />
<TextView
    android:id="@+id/me_from_db"
    android:layout_below="@+id/me_pic"
    android:layout_width="wrap_content"
    android:textColor="#ff000000"
    android:layout_height="wrap_content"
    android:textSize="15.0sp"
    />

     </RelativeLayout></ScrollView>

</RelativeLayout>
